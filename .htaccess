RewriteEngine On
RewriteBase /

# Allow direct access to static assets (CSS, JS, images, fonts, etc.)
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|mp4|pdf|ico|json)$ [NC]
RewriteRule .* - [L]

# âš¡ FIX: Preserve POST requests and avoid breaking form submissions
RewriteCond %{REQUEST_METHOD} =POST
RewriteRule ^ - [L]

# Remove .php extension for GET requests only
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# Redirect .php to extensionless URLs (Only for GET)
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php [NC]
RewriteRule ^ /%1 [R=301,L]

# Redirect all non-existing requests to 404
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /404.php [L]
